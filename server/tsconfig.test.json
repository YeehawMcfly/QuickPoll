{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}